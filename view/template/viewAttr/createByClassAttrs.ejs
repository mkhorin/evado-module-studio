<%
layout(_view.get('_layout/frame/select'));
block('title', 'Class attributes');

const columns = [{
  name: 'name',
  sortable: true,
  searchable: true
}, {
  name: 'label',
  sortable: true,
  searchable: true
}, {
  name: 'type',
  format: 'label'
}];
if (classModel.hasParent()) {
  columns.push({
    name: 'inherited',
    format: 'boolean'
  });
}
%>
<%- include(_view.get('_part/list/select'), {
  data: {
    columns,
    order:{
      original: 1,
      name: 1
    },
    select: ['create-by-class-attrs', viewModel],
    list: ['class-attr/list-unused-by-view', viewModel],
    update: 'class-attr/update',
    create: null,
    paging: false
  }
}) %>