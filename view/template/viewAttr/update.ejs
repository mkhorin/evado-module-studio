<% block('title', model.getTitle()); %>
<% block('titleTranslation', 'none'); %>
<%
const items = [{
    id: 'Main',
    active: true,
    content: _view.getInternalTemplate('_tabMain')
}];
const classAttr = model.rel('classAttr');
if (classAttr.isRelation() || classAttr.isUser()) {
    items.push({
        id: 'Relation',
        content: _view.getInternalTemplate('_tabRelation')
    });
}
items.push({
    id: 'Validators',
    content: {
        template: _view.get('_part/attr/relation'),
        attr: 'rules',
        css: 'no-label',
        data: {
            columns: [{
                name: 'type',
                format: 'label'
            }, {
                name: 'param'
            }, {
                name: 'orderNumber'
            }],
            order: {orderNumber: 1},
            link: null,
            unlink: null,
            modalSort: true
        }
    }
},{
    id: 'Behaviors',
    content: {
        template: _view.get('_part/attr/relation'),
        attr: 'behaviors',
        css: 'no-label',
        data: {
            columns: [{
                name: 'type',
                format: 'label'
            }, {
                name: 'param'
            }, {
                name: 'orderNumber'
            }],
            order: {orderNumber: 1},
            link: null,
            unlink: null,
            modalSort: true
        }
    }
},{
    id: 'Action binders',
    content: {
        template: _view.get('_part/attr/relation'),
        attr: 'actionBinder',
        css: 'no-label',
        data: {
            columns: [{
                name: 'show'
            },{
                name: 'require'
            },{
                name: 'enable'
            },{
                name: 'value'
            }],
            link: null,
            unlink: null
        }
    }
});
%>
<%- include(_view.getInternalTemplate('_form')) %>
<%- include(_view.get('_part/group/tabs'), {items}) %>