<%
layout(_view.get(_layout));
block('tab', `Index`);

const checkboxTemplate = _view.get('_part/attr/checkbox');
%>

<%- include(_view.get('_part/attr/hidden'), {
    attr: 'class'
}) %>

<%- include(_view.get('_part/attr/string'), {
    attr: 'name'
}) %>

<%- include(checkboxTemplate, {
    attr: 'unique'
}) %>

<%- include(checkboxTemplate, {
    attr: 'background',
    hint: 'Build the index without blocking other database activity'
}) %>

<%- include(_view.get('_part/attr/json'), {
    attr: 'options'
}) %>