<%
const columnTemplate = _view.get('_part/group/columns');
const jsonTemplate = _view.get('_part/attr/json');
const stringTemplate = _view.get('_part/attr/string');
%>

<%- include(_view.getInternalTemplate('group/mainBase')) %>

<%- include(jsonTemplate, {
    attr: 'defaultValue'
}) %>

<%- include(_view.get('_part/attr/select'), {
    attr: 'group',
    displayValue: model.getRelatedTitle('group'),
    items: null,
    select2: {ajax: {url: _url('class-group/list-set-select', {id: model.get('class')})}},
    update: _url('class-group/update')
}) %>

<%- include(jsonTemplate, {
    attr: 'header',
    extHint: 'String view template'
}) %>

<%- include(columnTemplate, {
    items: [{
        template: stringTemplate,
        params: {
            attr: 'orderNumber'
        }
    },{
        template: _view.get('_part/attr/radioList'),
        params: {
            attr: 'indexing',
            items: [{
                value: '',
                text: 'None'
            }, {
                value: '1',
                text: 'Ascending'
            }, {
                value: '-1',
                text: 'Descending'
            }]
        }
    }]
}) %>

<%- include(stringTemplate, {
    attr: 'hint'
}) %>

<%- include(_view.get('_part/attr/text'), {
    attr: 'extHint',
    extHint: 'Hint is hidden in an icon'
}) %>

<%- include(jsonTemplate, {
    attr: 'options'
}) %>